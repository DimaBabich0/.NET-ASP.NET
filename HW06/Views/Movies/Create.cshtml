@model HW03.Models.Movie

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h1 class="text-center text-primary">Create a New Movie</h1>
        <hr />
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-bold"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter movie title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DirectorsName" class="form-label fw-bold"></label>
                <input asp-for="DirectorsName" class="form-control" placeholder="Enter director's name" />
                <span asp-validation-for="DirectorsName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Genre" class="form-label fw-bold"></label>
                <input asp-for="Genre" class="form-control" placeholder="Enter genre" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Year" class="form-label fw-bold"></label>
                <input asp-for="Year" type="number" class="form-control" placeholder="Enter release year" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PosterPath" class="form-label fw-bold"></label>
                <input asp-for="PosterPath" class="form-control" placeholder="Enter poster URL" />
                <span asp-validation-for="PosterPath" class="text-danger"></span>
                <p class="form-label fw-bold">Or upload poster</p>
                <input type="file" name="uploadedFile" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Synopsis" class="form-label fw-bold"></label>
                <textarea asp-for="Synopsis" class="form-control" rows="4" placeholder="Enter movie synopsis" ></textarea>
                <span asp-validation-for="Synopsis" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Create Movie</button>
            </div>
        </form>
    </div>
    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}